<%= form_with(model: @product) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      
    </div>
  <% end %>

  <div class="card card-form">

    <div class="field">
      <%= form.label :name, class:"form-label"%>
      <%= form.text_field :name, class:"form-control field-name", placeholder:"Enter name" %>
    </div>

    <div class="field">
      <%= form.label :description, class:"form-label"%>
      <%= form.text_area :description, class:"form-control field-name", placeholder:"Enter description" %>
    </div>

    <div class="field">
      <%= form.label :price, class:"form-label"%>
      <%= form.text_field :price, class:"form-control field-name", placeholder:"Enter price" %>
    </div>

    <div class="field">
      <%= form.label :weight, class:"form-label"%>
      <%= form.text_field :weight, class:"form-control field-name", placeholder:"Enter weight" %>
    </div>

    <div class="actions submit-button">
      <%= form.submit class:"btn btn-primary btn-sm" %>
    </div>
  </div>
<% end %>

